<?xml version="1.0" encoding="utf-8"?>
<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
				   xmlns:s="library://ns.adobe.com/flex/spark" 
				   xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
				   minWidth="21" minHeight="21" 
				   alpha.disabled="0.5" xmlns:local="*">
	
	<fx:Metadata>
		<![CDATA[ 
		/** 
		* @copy spark.skins.spark.ApplicationSkin#hostComponent
		*/
		[HostComponent("spark.components.Button")]
		]]>
	</fx:Metadata>
	
	<fx:Script fb:purpose="styling">
		<![CDATA[         
			
		]]>        
	</fx:Script>
	<fx:Declarations>
		<s:GlowFilter id="glow" blurX="20" blurY="20" alpha="0.5" knockout="true" strength="5" quality="3"  color="0xFFFFFF" />
	</fx:Declarations>
	<!-- states -->
	<s:states>
		<s:State name="up" />
		<s:State name="over" />
		<s:State name="down" />
		<s:State name="disabled" />
	</s:states>
	
	<local:SkyRightButtonDownSkin includeIn="down, over" top="0" left="0" right="0" bottom="0" />
	<local:SkyRightButtonUpSkin excludeFrom="down, over"  top="0" left="0" right="0" bottom="0" />
	<local:SkyRightButtonGlow  top="0" left="0" right="0" bottom="0" filters="{[glow]}" />
	<s:RichText id="labelDisplay" color="#ffffff" color.down="#0099FF" filters="{[glow]}" color.over="#0099FF" fontSize="37"
			 	kerning="on" tabStops="S0 S50 S100 S150" textAlign="center"
				top.disabled="20" bottom.disabled="22" left="20" right="20" paddingLeft="20" paddingRight="20"
				top.down="20" bottom.down="0"
				top.over="20" bottom.over="0"
				top.up="20" bottom.up="0"/>
	
</s:SparkButtonSkin>
